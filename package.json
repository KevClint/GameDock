{
  "name": "gamedock",
  "version": "2.0.0",
  "description": "Minimalist widget-style game launcher",
  "author": "kevclint",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.kevclint.gamedock",
    "productName": "GameDock",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "files": [
      "**/*",
      "!node_modules/.cache",
      "!*.md"
    ]
  }
}
